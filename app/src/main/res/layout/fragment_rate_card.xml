<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:focusable="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:strokeWidth="2dp"
                        android:layout_marginEnd="10dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="70dp"
                                android:layout_gravity="top|center"
                                android:layout_height="70dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/circle_background_transparent">

                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_car"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:contentDescription="@string/app_name" />
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:text="@string/base_fare"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/base_fare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:hint="@string/dash"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvFareDistance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:padding="8dp"
                                    android:gravity="start"
                                    android:singleLine="true"
                                    android:text="@string/fare_km"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/fare_km"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:hint="@string/dash"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:text="@string/fare_type"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/fare_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:hint="@string/dash"
                                    android:textSize="13dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:text="@string/capacity"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/capacity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="8dp"
                                    android:drawableStart="@drawable/ic_user"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/done"
                style="@style/MyButton.Accent"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/_30sdp"
                android:singleLine="true"
                android:text="@string/done"/>
        </LinearLayout>
</FrameLayout>