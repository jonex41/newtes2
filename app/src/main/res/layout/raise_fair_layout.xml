<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/clanpro_medium"
        android:text="Current Fare"
        android:textColor="@color/colorSecondaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:fontFamily="@font/clanpro_medium"
        android:text="PKR 464"

        android:textColor="@color/quantum_black_100"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sub_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sub_btn" />


    <Button
        android:id="@+id/sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        style="@style/MyButton.Accent"
        android:layout_marginStart="@dimen/_15sdp"
        android:backgroundTint="@color/darkgreen"
        android:layout_alignParentBottom="true"
        android:text="-5"
        android:fontFamily="@font/clanpro_medium"

        android:textColor="@color/white"
        android:textStyle="bold"

        />


    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        style="@style/MyButton.Accent"
        android:backgroundTint="@color/darkgreen"
        android:layout_alignParentBottom="true"
        android:text="+5"
        android:fontFamily="@font/clanpro_medium"
         android:textColor="@color/white"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/raise_btn"

        style="@style/MyButton.Accent"

        android:layout_marginEnd="@dimen/_15sdp"
        android:backgroundTint="@color/darkgreen"
        android:fontFamily="@font/clanpro_medium"
        android:text="Raise Fare"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>